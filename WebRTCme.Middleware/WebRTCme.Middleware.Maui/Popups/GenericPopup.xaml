<?xml version="1.0" encoding="utf-8" ?>
<views:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:views="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
           Size="300,300"
           x:Class="WebRTCme.Middleware.Maui.Popups.GenericPopup">

    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Image x:Name="Image" Aspect="AspectFit" HeightRequest="30" IsVisible="False"/>
                <Label x:Name="Title" FontSize="Title" FontAttributes="Bold" IsVisible="False"/>
            </StackLayout>
            <Label x:Name="Text" Margin="0,20,0,0" IsVisible="False"/>
            <Entry x:Name="Entry" Margin="0,10,0,0" IsVisible="False"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20">
                <Button x:Name="OkButton" Clicked="OkButton_Clicked" IsVisible="False"/>
                <Button x:Name="CancelButton" Clicked="CancelButton_Clicked" IsVisible="False"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</views:Popup>