<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:WebRTCme.DemoApp.Xamarin.Extensions"
             Title="About"
             x:Class="DemoApp.Views.AboutPage">

    <StackLayout VerticalOptions="CenterAndExpand">
        <Label Text="WebRTCme Demo app" Padding="0,0,0,20" FontSize="28" FontAttributes="Bold" 
               HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Image Aspect="AspectFit" HeightRequest="100"
               Source="{extensions:ImageResourceMarkupExtension WebRTCme.DemoApp.Xamarin.Images.me.png}" />
        <BoxView HeightRequest="20"/>
        <Label Text="© melihercan @2021" FontSize="12" 
               FontAttributes="Italic" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
    </StackLayout>


</ContentPage>
