                                      VideoMuted="{Binding VideoMuted}" AudioMuted="{Binding AudioMuted}"
                                      CameraType="{Binding CameraType}" ShowControls="{Binding ShowControls}"
                                      HeightRequest="50"
                                      />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>-->

    </ContentPage.Content>
</ContentPage>
    
